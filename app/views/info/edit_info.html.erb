<div class="box">
<h3>Edit your post</h3>
<form action="/info/update_info/<%= @info.id %>/" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  Title : <input type="text" name="info[title]" value="<%= @info.title %>"><br />
  Content : <textarea name="info[content]" rows="8" cols="80"><%=  @info.content%></textarea><br />
  <span class="image right"><input type="submit" value="Submit"></span>
</form>
<br/><br/>
</div>
