
<br/>
<div class= "box">

<h3>New Post</h3>
<br/>
<%= form_for(@matching, url: matching_create_matching_path) do |f| %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div><br>
  <div class="field">
    <%= f.label :content %>
    <%= f.text_area :content %>
  </div><br>
  <div class="field">
    <%= f.label :image %>
    <%= f.file_field :image, accept: 'image/png,image/gif,image/jpeg' %>
  </div><br>
  <span class="image right">
    
  <%= radio_button_tag(:check, "open") %>
  <%= label_tag(:check_open, "모집중") %>
  <%= radio_button_tag(:check, "done") %>
  <%= label_tag(:check_done, "모집완료") %>
  </br></br>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>


 </span>
<br/><br/>
</div>