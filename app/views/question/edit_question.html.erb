<div class="box">
<h3>Edit your post</h3>
<form action="/question/update_question/<%= @question.id %>/" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  Title : <input type="text" name="question[title]" value="<%= @question.title %>"><br />
  Content : <textarea name="question[content]" rows="8" cols="80"><%=  @question.content%></textarea><br />
  <span class="image right"><input type="submit" value="Submit"></span>
</form>
<br/><br/>
</div>
