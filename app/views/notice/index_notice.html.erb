</head>


<body>

<!-- Navbar -->
<div class="w3-top">
  <div class="w3-bar w3-black w3-card">
    <a class="w3-bar-item w3-button w3-padding-large w3-hide-medium w3-hide-large w3-right" href="javascript:void(0)" onclick="myFunction()" title="Toggle Navigation Menu"><i class="fa fa-bars"></i></a>
    
    <a href='/' class="w3-bar-item w3-button w3-padding-large w3-hide-small"> Home </a>
    
    <% if user_signed_in? %>
    <a><%=current_user.email%> 님 환영합니다!</a>
    <% else %>
    <% end %></li></a>
   
    <% if user_signed_in? %>
    <a href='/page/home_page' class="w3-bar-item w3-button w3-padding-large w3-hide-small">내 페이지 </a> 
    <% else %>
    <a href='/users/sign_in' class="w3-bar-item w3-button w3-padding-large w3-hide-small">로그인</a>
    <% end %>
    
    <% if user_signed_in? %>
    <a href='/users/sign_out' data-method='delete' class="w3-bar-item w3-button w3-padding-large w3-hide-small">로그아웃</a>
    <% else %>
    <a href='/users/sign_up' class="w3-bar-item w3-button w3-padding-large w3-hide-small">회원가입</a>
    <% end %>
    
    <a href='/notice/home_notice' class="w3-bar-item w3-button w3-padding-large w3-hide-small"> Notice | 공지사항 </a>
    
    
  </div>
</div>
<br><br><br><br><br>

<table>
  <tr>
     Time: <%= @notice.created_at.strftime("%Y년 %m월 %d일 %H시%M분") %>
     User:<%=@notice.user.name %>
     Title: <%= @notice.title %>
     내용 : <%= @notice.content %>
  </tr>
  
  </br></br>

  <% if can? :edit_notice, @notice %>
  <a href="/notice/edit_notice/<%= @notice.id %>">[수정]</a> 
  <% end %>
  
  <% if can? :destroy_notice, @notice %>
    <form action="/notice/destroy_notice/<%= @notice.id %>" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <input type="submit" name="" value="삭제">
    </form>
  </br></br>
  <%end%>
  
  <form action="/notices/index_notice/<%= @notice.id %>/comments/create" method='get'>
    <input type='text' name='input_comment'>
    <input type='submit' value='댓글 작성'>
  </form>
  </br></br>
  
  
<% @comments.each do |p| %>
  <p><%= p.content %></p>
  <p>댓글 작성자: <%= p.user.name %></p>
  
  <% if can? :destroy, p %>
  <a href="/notices/index_notice/<%= @notice.id %>/comments/destroy/<%= p.id %>" data-confirm='댓글을 삭제합니다.'>[댓글삭제] </a>
  <%end%>
  
  <% if can? :edit, p %>
  <a href="/notices/index_notice/<%= @notice.id %>/comments/edit/<%= p.id %>" data-confirm='댓글을 수정합니다.'> [댓글수정] </a> 
  <%end%>
  
<% end %>