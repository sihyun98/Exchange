<h1>수정 화면</h1>
<form action="/question/update_question/<%= @question.id %>/" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  제목 : <input type="text" name="question[title]" value="<%= @question.title %>"><br />
  내용 : <textarea name="question[content]" rows="8" cols="80"><%= @question.content%></textarea><br />
  <input type="submit" value="제출">
</form>
