<% @questions.each do |p|%>
  제목 : <%= p.title %><br>
  내용 : <%= p.content %>
   <a href="/question/edit_question/<%= p.id %>">[수정]</a> 
   <form action="/question/destroy_question/<%= p.id %>" method="post">
