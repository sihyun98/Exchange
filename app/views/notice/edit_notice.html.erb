<div class="box">
<h3>Edit your post</h3>
<form action="/notice/update_notice/<%= @notice.id %>/" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  Title : <input type="text" name="notice[title]" value="<%= @notice.title %>"><br />
  Content : <textarea name="notice[content]" rows="8" cols="80"><%= @notice.content%></textarea><br />
  <span class="image right"><input type="submit" value="Submit"></span>
</form>
<br/><br/>
</div>