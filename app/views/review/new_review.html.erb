<div class= "box">

<h3>New Post</h3>
<br/>


<%= form_for(@review, url: review_create_review_path) do |f| %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <br/>
  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </div>
  <br/>
  <div class="field">
    <%= f.label :image %><br>
    <%= f.file_field :image, accept: 'image/png,image/gif,image/jpeg' %>
  </div>
  <br/>
   <span class="image right">
  <div class="actions">
    <%= f.submit %>
  </div>
 
<% end %>
 </span>
<br/><br/>
</div>