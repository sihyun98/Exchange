


  제목 : <%= @matching.title %><br>
  내용 : <%= @matching.content %> <br>
  작성된 시간 : <%= @matching.created_at.strftime("%Y년 %m월 %d일 %H시%M분") %><br>
  작성자 : <%= @matching.user.name %><br>
   <%= image_tag("#{@matching.image}") %>
   
   <% if can? :edit_matching, @matching %>
       <a href="/matching/edit_matching/<%= @matching.id %>">[수정]</a> 
   <%end%>
   
    <% if can? :destroy_matching, @matching %>
        <form action="/matching/destroy_matching/<%= @matching.id %>" method="post">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <input type="submit" name="" value="삭제">
        </form>
        <hr />
    <%end%>
 
  
  <form action="/matchings/index_matching/<%= @matching.id %>/commentmatchings/create" method='get'>
    <input type='text' name='input_comment'>
    <input type='submit' value='댓글 작성'>
  </form>


<% @commentmatchings.each do |comment| %>

    <p><%= comment.content %> </p>
    <p><%= comment.user.name %> </p>
    
    <% if can? :destroy, comment %>
        <a href="/matchings/index_matching/<%=@matching.id%>/commentmatchings/destroy/<%= comment.id %>" data-confirm='댓글을 삭제합니다.'> [댓글 삭제] </a>
    <%end%>
    
    <% if can? :edit, comment %>
        <a href="/matchings/index_matching/<%= @matching.id %>/commentmatchings/edit/<%= comment.id %>" data-confirm='댓글을 수정합니다.'> [댓글수정] </a> 
    <%end%>

<% end %>

 