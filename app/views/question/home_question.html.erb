    <input type="submit" name="" value="삭제">
  </form>
  <hr />
  <hr />
<% end %>

<div class="search-container">
  <form action="/action_page.php">
    <input type="text" placeholder="Search.." name="search">
    <button type="submit">Submit</button>
  </form>
</div>